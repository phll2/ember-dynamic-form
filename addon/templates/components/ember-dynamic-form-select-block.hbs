{{label-element for=selectId required=required label=label}}
{{#if icon}}
  <div class="input-group {{if hasError "has-error"}} {{if hasSuccess "has-success"}}">
    {{#unless iconRight}}
      <span class="input-group-addon">
        <i class="fa {{icon}}" aria-hidden="true"></i>
      </span>
    {{/unless}}
    <select id={{selectId}} class="form-control" required={{required}} onchange={{action "setOption" value="target.value"}}
     onblur={{action "checkSelected"}}>
      <option value="" disabled=true selected={{eq selected null}}>{{placeholder}}</option>
      {{#each options as |option|}}
        <option value={{option.value}} selected={{eq selected option.value}}>{{option.label}}</option>
      {{/each}}
    </select>
    {{#if iconRight}}
      <span class="input-group-addon">
        <i class="fa {{icon}}" aria-hidden="true"></i>
      </span>
    {{/if}}
  </div>
{{else}}
  <div class="{{if hasError "has-error"}} {{if hasSuccess "has-success"}}">
    <select id={{selectId}} class="form-control" required={{required}} onchange={{action "setOption" value="target.value"}} 
      onblur={{action "checkSelected"}}>
      <option value="" disabled=true selected={{eq selected false}}>{{placeholder}}</option>
      {{#each options as |option|}}
        <option value={{option.value}} selected={{eq selected option.value}}>{{option.label}}</option>
      {{/each}}
    </select>
  </div>
{{/if}}
