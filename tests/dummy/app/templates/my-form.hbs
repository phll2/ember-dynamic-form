<div class="container">
  <div class="col-md-8 col-md-offset-2">
    {{#ember-dynamic-form title="My Form" saveWithoutFiles=(action "save")}}
      <fieldset>
        {{ember-dynamic-form-input-block
          label='Username'
          value=model.username
          required=true
          icon='fa-user'
          onValueUpdate=(action "setUsername")
        }}

        {{ember-dynamic-form-input-block
          label='Age'
          value=model.age
          placeholder='age is optional'
          inputId='ageInput'
          onValueUpdate=(action "setAge")
        }}

        {{ember-dynamic-form-input-block
          type='date'
          label='Date'
          pattern="\d{4}/\d{1,2}/\d{1,2}"
          placeholder="YYYY/MM/DD"
          value=model.date
          required=true
          onValueUpdate=(action "setDate")
        }}

        {{ember-dynamic-form-input-block
          type='password'
          label='Password'
          value=model.password
          icon='fa-key'
          iconRight=true
          onValueUpdate=(action "setPassword")
        }}

        {{ember-dynamic-form-select-block 
          label="Company"
          required=true
          options=companySelectOptions
          selected=model.company.id
          onOptionSelect=(action "setCompany")
        }}

        {{ember-dynamic-form-textarea-block
          label="Description"
          value=model.description
          required=true
          onValueUpdate=(action "setDescription")
        }}
      </fieldset>
    {{/ember-dynamic-form}}
  </div>
</div>
